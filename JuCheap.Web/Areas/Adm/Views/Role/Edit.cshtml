@model Hk.QrPay.Service.Dto.RoleDto
@{
    ViewBag.Title = "Edit";
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title></title>
    <link href="/content/css/content-base.css" rel="stylesheet" />
</head>
<body class="gray-bg">
    <div class="wrapper wrapper-content">
        <div class="ibox float-e-margins">
            <div class="ibox-title">
                <h5>添加菜单</h5>
                <div class="ibox-tools">
                    <a class="collapse-link">
                        <i class="fa fa-chevron-up"></i>
                    </a>
                </div>
            </div>
            <div class="ibox-content">
                <form action="@Request.Url.PathAndQuery" class="form-horizontal" method="post">
                    <div class="form-group">
                        <label class="col-sm-3 control-label">
                            @Html.LabelFor(item => item.Name)：</label>
                        <div class="col-sm-8">
                              @Html.TextBoxFor(item => item.Name, new { @class = "form-control" })
                              @Html.HiddenFor(item=>item.Id)
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-3 control-label">
                            @Html.LabelFor(item => item.Description)：</label>
                        <div class="col-sm-8">
                              @Html.TextBoxFor(item => item.Description, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-sm-offset-3 col-sm-8">
                            <button class="btn btn-info" type="submit" id="btnSave">保存</button>
                            <button class="btn btn-white" type="button" id="btnBack" data-type="url">返回</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <script src="~/Content/js/base.js"></script>
    <script src="~/content/js/jqueryValidate.js"></script>
    <script src="~/content/js/menu.js"></script>
    <script src="~/content/js/action.js"></script>
</body>
</html>